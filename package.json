{
  "name": "tribes-by-astrix",
  "version": "1.0.0",
  "description": "A decentralized platform for community management and engagement",
  "scripts": {
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/*.test.ts",
    "test:integration": "hardhat test test/integration/*.test.ts",
    "test:journey": "hardhat test test/journey/*.test.ts",
    "test:coverage": "hardhat coverage",
    "test:report": "node scripts/test-runner.js",
    "test:deployed": "node scripts/test-deployed-contracts.js",
    "test:deployed:mock": "node scripts/test-deployed-contracts.js --mock",
    "compile": "hardhat compile",
    "clean": "rimraf artifacts cache typechain-types reports coverage storageLayout",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "deploy": "./scripts/tribes-cli.js deploy",
    "deploy:mock": "./scripts/tribes-cli.js deploy --mock",
    "deploy:full": "./scripts/tribes-cli.js full",
    "deploy:full:verify": "./scripts/tribes-cli.js full --verify",
    "deploy:full:complete": "./scripts/tribes-cli.js full --verify --setup --test",
    "deploy:full:mock": "./scripts/tribes-cli.js full --mock --test",
    "deploy:hardhat": "./scripts/tribes-cli.js deploy --network hardhat",
    "deploy:monad": "./scripts/tribes-cli.js deploy --network monad-devnet",
    "deploy:mumbai": "./scripts/tribes-cli.js deploy --network mumbai",
    "deploy:polygon": "./scripts/tribes-cli.js deploy --network polygon",
    "upgrade": "./scripts/tribes-cli.js upgrade",
    "upgrade:monad": "./scripts/tribes-cli.js upgrade --network monad-devnet",
    "upgrade:hardhat": "./scripts/tribes-cli.js upgrade --network hardhat",
    "upgrade:mumbai": "./scripts/tribes-cli.js upgrade --network mumbai",
    "upgrade:polygon": "./scripts/tribes-cli.js upgrade --network polygon",
    "storage-layout": "node scripts/check-storage-layout.js",
    "storage-layout:compare": "node scripts/check-storage-layout.js --compare",
    "storage-layout:save": "node scripts/check-storage-layout.js --save",
    "verify": "./scripts/tribes-cli.js verify",
    "verify:monad": "./scripts/tribes-cli.js verify --network monad-devnet",
    "verify:mumbai": "./scripts/tribes-cli.js verify --network mumbai",
    "verify:polygon": "./scripts/tribes-cli.js verify --network polygon",
    "setup": "./scripts/tribes-cli.js setup",
    "setup:monad": "./scripts/tribes-cli.js setup --network monad-devnet",
    "setup:hardhat": "./scripts/tribes-cli.js setup --network hardhat",
    "setup:mumbai": "./scripts/tribes-cli.js setup --network mumbai",
    "setup:polygon": "./scripts/tribes-cli.js setup --network polygon",
    "build:sdk": "node scripts/build-sdk.js",
    "build:sdk:monad": "node scripts/build-sdk.js --network monad-devnet",
    "build:sdk:hardhat": "node scripts/build-sdk.js --network hardhat",
    "build:sdk:clean": "node scripts/build-sdk.js --clean",
    "update:sdk": "./scripts/tribes-cli.js update-sdk",
    "update:sdk:monad": "./scripts/tribes-cli.js update-sdk --network monad-devnet",
    "update:sdk:hardhat": "./scripts/tribes-cli.js update-sdk --network hardhat",
    "update:sdk:mumbai": "./scripts/tribes-cli.js update-sdk --network mumbai",
    "update:sdk:polygon": "./scripts/tribes-cli.js update-sdk --network polygon",
    "save:deployment": "./scripts/tribes-cli.js save-deployment",
    "save:deployment:monad": "./scripts/tribes-cli.js save-deployment --network monad-devnet",
    "tribes": "./scripts/tribes-cli.js",
    "report:server": "node scripts/test-runner.js --serve"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@sentry/node": "^9.13.0",
    "axios": "^1.8.4",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "elliptic": "^6.6.1",
    "ethers": "^6.11.1",
    "express": "^4.21.2",
    "readline-sync": "^1.4.10",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "@types/readline-sync": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^4.2.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.1",
    "hardhat": "^2.23.0",
    "hardhat-gas-reporter": "^1.0.10",
    "rimraf": "^5.0.5",
    "solidity-coverage": "^0.8.15",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  }
}
