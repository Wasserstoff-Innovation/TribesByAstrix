{
  "name": "tribes-by-astrix",
  "version": "1.0.0",
  "description": "A decentralized platform for community management and engagement",
  "scripts": {
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/*.test.ts",
    "test:integration": "hardhat test test/integration/*.test.ts",
    "test:journey": "hardhat test test/journey/*.test.ts",
    "test:file": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:report": "node scripts/test-runner.js",
    "report:server": "node public/server.js",
    
    "compile": "hardhat compile",
    "deploy:fuse": "hardhat run scripts/deploy.ts --network flashTestnet",
    "deploy:monad": "hardhat run scripts/deploy.ts --network monadDevnet",
    
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rimraf artifacts cache typechain-types reports coverage"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "cors": "^2.8.5",
    "ethers": "^6.11.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^4.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.1",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.8",
    "rimraf": "^5.0.5",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  }
}
